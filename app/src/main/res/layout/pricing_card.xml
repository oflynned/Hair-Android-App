<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/haircut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="â‚¬10.00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/haircut_price">

        <TextView
            android:id="@+id/haircut_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haircut"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/haircut_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haircut_name"
            android:text="Description" />
    </RelativeLayout>

</RelativeLayout>